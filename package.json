{
  "name": "aws-lambda-control-plane",
  "version": "1.0.0",
  "description": "AWS Lambda Control Plane API - Single Function Architecture",
  "main": "index.ts",
  "type": "module",
  "engines": {
    "node": ">=20.0.0"
  },
  "scripts": {
    "build": "esbuild index.ts --bundle --platform=node --target=node20 --format=esm --outfile=dist/index.mjs --sourcemap --minify",
    "dev": "tsx watch index.ts",
    "test": "vitest --run",
    "test:watch": "vitest",
    "test:properties": "vitest --run tests/properties/",
    "lint": "eslint . --ext .ts,.js",
    "type-check": "tsc --noEmit",
    "deploy": "serverless deploy",
    "deploy:dev": "serverless deploy --stage dev",
    "deploy:prod": "serverless deploy --stage prod",
    "remove": "serverless remove"
  },
  "dependencies": {
    "@aws-lambda-powertools/logger": "^1.17.0",
    "@aws-lambda-powertools/metrics": "^1.17.0",
    "@aws-lambda-powertools/tracer": "^1.17.0",
    "@aws-sdk/client-dynamodb": "^3.490.0",
    "@aws-sdk/client-secrets-manager": "^3.490.0",
    "@aws-sdk/client-ses": "^3.490.0",
    "@aws-sdk/lib-dynamodb": "^3.490.0",
    "bcryptjs": "^2.4.3",
    "jose": "^5.2.0",
    "validator": "^13.11.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/aws-lambda": "^8.10.131",
    "@types/bcryptjs": "^2.4.6",
    "@types/node": "^20.11.0",
    "@types/validator": "^13.11.8",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "esbuild": "^0.19.11",
    "eslint": "^8.56.0",
    "fast-check": "^3.15.1",
    "serverless": "^3.38.0",
    "serverless-esbuild": "^1.52.1",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3",
    "vitest": "^1.2.0"
  },
  "keywords": [
    "aws",
    "lambda",
    "serverless",
    "control-plane",
    "api",
    "single-function",
    "typescript",
    "node20"
  ],
  "author": "",
  "license": "MIT",
